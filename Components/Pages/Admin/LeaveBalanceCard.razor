@using HMS.Models
@using HMS.Services
@inject AdminService AdminService

@if (balance != null)
{
    <div class="card mb-3">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-calendar-check"></i> Leave Balance @Year</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6>Vacation Days</h6>
                    <div class="progress mb-2" style="height: 25px;">
                        <div class="progress-bar bg-success" role="progressbar"
                             style="width: @GetPercentage(balance.VacationDaysRemaining, balance.VacationDaysTotal)%">
                            @balance.VacationDaysRemaining / @balance.VacationDaysTotal days
                        </div>
                    </div>
                    <small class="text-muted">Used: @balance.VacationDaysUsed days</small>
                </div>

                <div class="col-md-6">
                    <h6>Other Leave Days (Tracked)</h6>
                    <p><strong>Sick Days:</strong> @balance.SickDaysUsed days</p>
                    <p><strong>VAB Days:</strong> @balance.VABDaysUsed days</p>
                    @if (balance.ParentalDaysUsed > 0)
                    {
                        <p><strong>Parental Days:</strong> @balance.ParentalDaysUsed days</p>
                    }
                </div>
            </div>

            <small class="text-muted">Last updated: @balance.LastUpdated.ToString("MMM dd, yyyy")</small>
        </div>
    </div>
}
else if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border spinner-border-sm" role="status"></div>
    </div>
}

@code {
    [Parameter]
    public int StaffId { get; set; }

    [Parameter]
    public int Year { get; set; } = DateTime.Now.Year;

    private LeaveBalance? balance;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadBalance();
    }

    private async Task LoadBalance()
    {
        isLoading = true;
        try
        {
            balance = await AdminService.GetOrCreateLeaveBalanceAsync(StaffId, Year);
        }
        finally
        {
            isLoading = false;
        }
    }

    private double GetPercentage(decimal remaining, int total)
    {
        if (total == 0) return 0;
        return (double)(remaining / total) * 100;
    }
}