@page "/admin/schedule/edit/{ScheduleId:int}"
@using HMS.Models
@using HMS.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "AdminOnly")]
@inject AdminService AdminService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Edit Schedule</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>Edit Schedule</h2>
            <p class="text-muted">Update staff schedule details</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
        </div>
    }

    @if (loading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading schedule data...</p>
        </div>
    }
    else if (scheduleModel == null)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Schedule not found.
        </div>
        <button class="btn btn-secondary" @onclick="Cancel">
            <i class="bi bi-arrow-left"></i> Back to List
        </button>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0">Schedule Details</h5>
                    </div>
                    <div class="card-body">
                        <EditForm Model="scheduleModel" OnValidSubmit="UpdateSchedule">
                            <DataAnnotationsValidator />

                            <div class="row">
                                <!-- Schedule ID (Read-only) -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Schedule ID</label>
                                    <input type="text" class="form-control" value="@ScheduleId" disabled />
                                </div>

                                <!-- Staff Selection -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Staff Member *</label>
                                    <select class="form-select" @bind="scheduleModel.StaffId">
                                        @foreach (var staff in staffMembers)
                                        {
                                            <option value="@staff.Id">@staff.User?.FirstName @staff.User?.LastName - @staff.Department</option>
                                        }
                                    </select>
                                    <ValidationMessage For="@(() => scheduleModel.StaffId)" />
                                </div>

                                <!-- Shift Type -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Shift Type *</label>
                                    <select class="form-select" @bind="scheduleModel.ShiftType">
                                        <option value="Morning">Morning</option>
                                        <option value="Afternoon">Afternoon</option>
                                        <option value="Evening">Evening</option>
                                        <option value="Night">Night</option>
                                        <option value="Full Day">Full Day</option>
                                        <option value="On-Call">On-Call</option>
                                    </select>
                                    <ValidationMessage For="@(() => scheduleModel.ShiftType)" />
                                </div>

                                <!-- Date -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Date *</label>
                                    <input type="date"
                                           class="form-control"
                                           @bind="scheduleDate"
                                           @bind:after="UpdateScheduleDate" />
                                </div>

                                <!-- Start Time -->
                                <div class="col-md-3 mb-3">
                                    <label class="form-label">Start Time *</label>
                                    <input type="time"
                                           class="form-control"
                                           value="@startTime"
                                           @onchange="@((ChangeEventArgs e) => { startTime = e.Value?.ToString() ?? ""; UpdateScheduleTimes(); })" />
                                </div>

                                <!-- End Time -->
                                <div class="col-md-3 mb-3">
                                    <label class="form-label">End Time *</label>
                                    <input type="time"
                                           class="form-control"
                                           value="@endTime"
                                           @onchange="@((ChangeEventArgs e) => { endTime = e.Value?.ToString() ?? ""; UpdateScheduleTimes(); })" />
                                </div>

                                <!-- Break Start -->
                                <div class="col-md-3 mb-3">
                                    <label class="form-label">Break Start</label>
                                    <input type="time"
                                           class="form-control"
                                           value="@breakStartTime"
                                           @onchange="@((ChangeEventArgs e) => { breakStartTime = e.Value?.ToString(); UpdateBreakTimes(); })" />
                                    <small class="text-muted">Auto-calculated</small>
                                </div>

                                <!-- Break End -->
                                <div class="col-md-3 mb-3">
                                    <label class="form-label">Break End</label>
                                    <input type="time"
                                           class="form-control"
                                           value="@breakEndTime"
                                           @onchange="@((ChangeEventArgs e) => { breakEndTime = e.Value?.ToString(); UpdateBreakTimes(); })" />
                                    <small class="text-muted">Auto-calculated</small>
                                </div>

                                <!-- Duration -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Duration</label>
                                    <input type="text" class="form-control" value="@GetDuration()" readonly />
                                </div>

                                <!-- Status -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Status *</label>
                                    <select class="form-select" @bind="scheduleModel.Status">
                                        <option value="Scheduled">Scheduled</option>
                                        <option value="Active">Active</option>
                                        <option value="On-Leave">On-Leave</option>
                                        <option value="Completed">Completed</option>
                                        <option value="Cancelled">Cancelled</option>
                                    </select>
                                    <ValidationMessage For="@(() => scheduleModel.Status)" />
                                </div>

                                <!-- Created At (Read-only) -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Created At</label>
                                    <input type="text" class="form-control" value="@originalSchedule?.CreatedAt.ToString("yyyy-MM-dd HH:mm")" disabled />
                                </div>

                                <!-- Reset Break Button -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">&nbsp;</label>
                                    <button type="button" class="btn btn-sm btn-outline-secondary w-100" @onclick="AutoCalculateBreakTimes">
                                        <i class="bi bi-arrow-clockwise me-1"></i>Reset Break Times
                                    </button>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex justify-content-between mt-4">
                                <div class="d-flex gap-2">
                                    <button type="button" class="btn btn-secondary" @onclick="Cancel">
                                        <i class="bi bi-x-circle"></i> Cancel
                                    </button>
                                </div>
                                <button type="submit" class="btn btn-warning" disabled="@saving">
                                    @if (saving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                    }
                                    <i class="bi bi-save"></i> Update Schedule
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>

            <!-- Preview Panel -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0">Preview</h5>
                    </div>
                    <div class="card-body">
                        <h6>Schedule Summary</h6>
                        <dl class="row">
                            <dt class="col-sm-5">Staff:</dt>
                            <dd class="col-sm-7">
                                @if (scheduleModel.StaffId > 0)
                                {
                                    var staff = staffMembers.FirstOrDefault(s => s.Id == scheduleModel.StaffId);
                                    <span>@staff?.User?.FirstName @staff?.User?.LastName</span>
                                }
                                else
                                {
                                    <span class="text-muted">Not selected</span>
                                }
                            </dd>

                            <dt class="col-sm-5">Department:</dt>
                            <dd class="col-sm-7">
                                @if (scheduleModel.StaffId > 0)
                                {
                                    var staff = staffMembers.FirstOrDefault(s => s.Id == scheduleModel.StaffId);
                                    <span class="badge bg-info">@staff?.Department</span>
                                }
                            </dd>

                            <dt class="col-sm-5">Date:</dt>
                            <dd class="col-sm-7">@scheduleDate.ToString("MMM dd, yyyy")</dd>

                            <dt class="col-sm-5">Time:</dt>
                            <dd class="col-sm-7">@startTime - @endTime</dd>

                            <dt class="col-sm-5">Duration:</dt>
                            <dd class="col-sm-7">@GetDuration()</dd>

                            <dt class="col-sm-5">Shift Type:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-@GetShiftTypeColor(scheduleModel.ShiftType)">@scheduleModel.ShiftType</span>
                            </dd>

                            <dt class="col-sm-5">Status:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-@GetStatusColor(scheduleModel.Status)">@scheduleModel.Status</span>
                            </dd>

                            @if (!string.IsNullOrEmpty(breakStartTime) && !string.IsNullOrEmpty(breakEndTime))
                            {
                                <dt class="col-sm-5">Break:</dt>
                                <dd class="col-sm-7">@breakStartTime - @breakEndTime</dd>
                            }
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int ScheduleId { get; set; }

    private List<HMS.Models.Staff> staffMembers = new();
    private ScheduleEditModel scheduleModel = new();
    private HMS.Models.Schedule? originalSchedule;

    private DateTime scheduleDate = DateTime.Today;
    private string startTime = "08:00";
    private string endTime = "16:00";
    private string? breakStartTime;
    private string? breakEndTime;

    private bool loading = true;
    private bool saving = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            loading = true;
            errorMessage = null;

            // Load staff members
            staffMembers = await AdminService.GetAllStaffAsync();

            // Load the schedule
            originalSchedule = await AdminService.GetScheduleByIdAsync(ScheduleId);

            if (originalSchedule == null)
            {
                errorMessage = "Schedule not found.";
                return;
            }

            // Map to edit model
            scheduleModel = new ScheduleEditModel
            {
                StaffId = originalSchedule.StaffId,
                Date = originalSchedule.Date,
                StartTime = originalSchedule.StartTime,
                EndTime = originalSchedule.EndTime,
                BreakStart = originalSchedule.BreakStart,
                BreakEnd = originalSchedule.BreakEnd,
                ShiftType = originalSchedule.ShiftType ?? "Morning",
                Status = originalSchedule.Status ?? "Scheduled"
            };

            // Set string representations
            scheduleDate = originalSchedule.Date;
            startTime = originalSchedule.StartTime.ToString(@"hh\:mm");
            endTime = originalSchedule.EndTime.ToString(@"hh\:mm");
            breakStartTime = originalSchedule.BreakStart?.ToString(@"hh\:mm");
            breakEndTime = originalSchedule.BreakEnd?.ToString(@"hh\:mm");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading schedule: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private void UpdateScheduleDate()
    {
        scheduleModel.Date = scheduleDate;
    }

    private void UpdateScheduleTimes()
    {
        if (TimeSpan.TryParse(startTime, out var start) && TimeSpan.TryParse(endTime, out var end))
        {
            scheduleModel.StartTime = start;
            scheduleModel.EndTime = end;
        }
        AutoCalculateBreakTimes();
    }

    private void AutoCalculateBreakTimes()
    {
        if (scheduleModel.EndTime > scheduleModel.StartTime)
        {
            var shiftDuration = scheduleModel.EndTime - scheduleModel.StartTime;

            if (shiftDuration.TotalHours >= 4)
            {
                var midpoint = scheduleModel.StartTime.Add(TimeSpan.FromMinutes(shiftDuration.TotalMinutes / 2));

                int breakDurationMinutes = shiftDuration.TotalHours >= 8 ? 60 : 30;

                var breakStart = midpoint.Add(TimeSpan.FromMinutes(-breakDurationMinutes / 2));
                var breakEnd = midpoint.Add(TimeSpan.FromMinutes(breakDurationMinutes / 2));

                scheduleModel.BreakStart = breakStart;
                scheduleModel.BreakEnd = breakEnd;

                breakStartTime = breakStart.ToString(@"hh\:mm");
                breakEndTime = breakEnd.ToString(@"hh\:mm");
            }
            else
            {
                scheduleModel.BreakStart = null;
                scheduleModel.BreakEnd = null;
                breakStartTime = null;
                breakEndTime = null;
            }
        }
    }

    private void UpdateBreakTimes()
    {
        if (!string.IsNullOrEmpty(breakStartTime) && TimeSpan.TryParse(breakStartTime, out var breakStart))
        {
            scheduleModel.BreakStart = breakStart;
        }
        else
        {
            scheduleModel.BreakStart = null;
        }

        if (!string.IsNullOrEmpty(breakEndTime) && TimeSpan.TryParse(breakEndTime, out var breakEnd))
        {
            scheduleModel.BreakEnd = breakEnd;
        }
        else
        {
            scheduleModel.BreakEnd = null;
        }
    }

    private string GetDuration()
    {
        if (scheduleModel.EndTime > scheduleModel.StartTime)
        {
            var totalDuration = scheduleModel.EndTime - scheduleModel.StartTime;
            var netDuration = totalDuration;

            if (scheduleModel.BreakStart.HasValue && scheduleModel.BreakEnd.HasValue &&
                scheduleModel.BreakEnd.Value > scheduleModel.BreakStart.Value)
            {
                var breakDuration = scheduleModel.BreakEnd.Value - scheduleModel.BreakStart.Value;
                netDuration = totalDuration - breakDuration;

                return $"{totalDuration.TotalHours:N1} hours (Net: {netDuration.TotalHours:N1} hours)";
            }

            return $"{totalDuration.TotalHours:N1} hours";
        }
        return "0 hours";
    }

    private async Task UpdateSchedule()
    {
        try
        {
            saving = true;
            errorMessage = null;

            // Ensure the model has the latest values
            scheduleModel.Date = scheduleDate;
            UpdateScheduleTimes();
            UpdateBreakTimes();

            if (scheduleModel.StaffId == 0)
            {
                errorMessage = "Please select a staff member.";
                return;
            }

            if (originalSchedule == null)
            {
                errorMessage = "Original schedule not found.";
                return;
            }

            // Update the original schedule object
            originalSchedule.StaffId = scheduleModel.StaffId;
            originalSchedule.Date = scheduleModel.Date;
            originalSchedule.StartTime = scheduleModel.StartTime;
            originalSchedule.EndTime = scheduleModel.EndTime;
            originalSchedule.BreakStart = scheduleModel.BreakStart;
            originalSchedule.BreakEnd = scheduleModel.BreakEnd;
            originalSchedule.ShiftType = scheduleModel.ShiftType;
            originalSchedule.Status = scheduleModel.Status;

            var success = await AdminService.UpdateScheduleAsync(originalSchedule);

            if (success)
            {
                successMessage = "Schedule updated successfully!";
                await Task.Delay(1500);
                NavigationManager.NavigateTo("/schedules");
            }
            else
            {
                errorMessage = "Failed to update schedule.";
            }
        }
        catch (InvalidOperationException ex)
        {
            // Handle duplicate schedule exception
            errorMessage = ex.Message;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating schedule: {ex.Message}";
        }
        finally
        {
            saving = false;
        }
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/schedules");
    }

    private string GetStatusColor(string status) => status switch
    {
        "Scheduled" => "primary",
        "Active" => "success",
        "Completed" => "secondary",
        "Cancelled" => "danger",
        "On-Leave" => "warning",
        _ => "secondary"
    };

    private string GetShiftTypeColor(string shiftType) => shiftType switch
    {
        "Morning" => "warning",
        "Afternoon" => "info",
        "Evening" => "primary",
        "Night" => "dark",
        "Full Day" => "success",
        "On-Call" => "danger",
        _ => "secondary"
    };

    private class ScheduleEditModel
    {
        public int StaffId { get; set; }
        public DateTime Date { get; set; }
        public TimeSpan StartTime { get; set; }
        public TimeSpan EndTime { get; set; }
        public TimeSpan? BreakStart { get; set; }
        public TimeSpan? BreakEnd { get; set; }
        public string ShiftType { get; set; } = "Morning";
        public string Status { get; set; } = "Scheduled";
    }
}