@page "/invoice/create"
@using HMS.Models
@using HMS.Services
@inject AdminService AdminService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<h3>Create Invoice</h3>

<main class="col-12 col-md-9 col-lg-10 py-4">
    <section class="content-area">
        <EditForm Model="@invoice" OnValidSubmit="HandleCreateInvoice">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="card p-4 shadow-sm rounded">
                <div class="row g-3">

                    <!-- PATIENT -->
                    <div class="col-md-6">
                        <label class="form-label">Patient</label>
                        <select class="form-select" @onchange="OnPatientChanged">
                            <option value="">Select Patient</option>
                            @foreach (var p in patients)
                            {
                                <option value="@p.Id">@p.User?.FirstName @p.User?.LastName</option>
                            }
                        </select>
                    </div>

                    <!-- APPOINTMENT -->
                    <div class="col-md-6">
                        <label class="form-label">Appointment</label>
                        <select class="form-select" @bind="invoice.AppointmentId">
                            <option value="">Select Appointment</option>
                            @foreach (var appt in filteredAppointments)
                            {
                                <option value="@appt.Id">
                                    @appt.AppointmentDate.ToShortDateString() - @appt.Reason
                                </option>
                            }
                        </select>
                    </div>

                    <!-- INVOICE ITEMS -->
                    <div class="col-12 mt-4">
                        <h5>Invoice Items</h5>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Description</th>
                                    <th style="width:100px;">Qty</th>
                                    <th style="width:150px;">Unit Price</th>
                                    <th style="width:150px;">Total</th>
                                    <th style="width:60px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in invoice.InvoiceItems)
                                {
                                    <tr>
                                        <td>
                                            <input class="form-control"
                                                   @bind="item.Description"
                                                   @oninput="RecalculateTotals" />
                                        </td>
                                        <td>
                                            <input type="number"
                                                   class="form-control"
                                                   @bind="item.Quantity"
                                                   @oninput="RecalculateTotals" />
                                        </td>
                                        <td>
                                            <input type="number" step="0.01"
                                                   class="form-control"
                                                   @bind="item.UnitPrice"
                                                   @oninput="RecalculateTotals" />
                                        </td>
                                        <td>
                                            @item.TotalPrice.ToString("0.00")
                                        </td>
                                        <td>
                                            <button type="button"
                                                    class="btn btn-danger btn-sm"
                                                    @onclick="() => RemoveItem(item)">
                                                X
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <button type="button"
                                class="btn btn-primary"
                                @onclick="AddItem">
                            + Add Item
                        </button>
                    </div>

                    <!-- TOTALS -->
                    <div class="col-md-4 mt-3">
                        <label class="form-label">Subtotal</label>
                        <input type="number" class="form-control" value="@invoice.SubTotal" readonly />
                    </div>

                    <div class="col-md-4 mt-3">
                        <label class="form-label">Tax (%)</label>
                        <input type="number" class="form-control" @bind="taxPercent" @oninput="RecalculateTotals" />
                    </div>

                    <div class="col-md-4 mt-3">
                        <label class="form-label">Total</label>
                        <input type="number" class="form-control" value="@invoice.TotalAmount" readonly />
                    </div>

                    <!-- STATUS + DUE DATE -->
                    <div class="col-md-6 mt-3">
                        <label class="form-label">Status</label>
                        <select class="form-select" @bind="invoice.Status">
                            <option value="Pending">Pending</option>
                            <option value="Unpaid">Unpaid</option>
                            <option value="Paid">Paid</option>
                        </select>
                    </div>

                    <div class="col-md-6 mt-3">
                        <label class="form-label">Due Date</label>
                        <input type="date" class="form-control" @bind="invoice.DueDate" />
                    </div>

                    <!-- BUTTONS -->
                    <div class="col-12 text-end mt-4">
                        <button type="submit" class="btn btn-success">Create Invoice</button>
                        <button type="button" class="btn btn-secondary ms-2"
                                @onclick="@(() => Navigation.NavigateTo("/invoice"))">
                            Cancel
                        </button>
                    </div>

                </div>
            </div>
        </EditForm>
    </section>
</main>

@code {
    private Invoice invoice = new();
    private List<Patient> patients = new();
    private List<Appointment> appointments = new();
    private List<Appointment> filteredAppointments = new();
    private decimal taxPercent = 10;

    protected override async Task OnInitializedAsync()
    {
        patients = await AdminService.GetAllPatientsAsync();
        appointments = await AdminService.GetAllAppointmentsAsync();
    }

    private void OnPatientChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int patientId))
        {
            invoice.PatientId = patientId;

            filteredAppointments = appointments
                .Where(a => a.PatientId == patientId)
                .ToList();
        }
        else
        {
            filteredAppointments.Clear();
        }
    }

    private void AddItem()
    {
        invoice.InvoiceItems.Add(new InvoiceItem
        {
            Quantity = 1,
            UnitPrice = 0,
            TotalPrice = 0
        });
    }

    private void RemoveItem(InvoiceItem item)
    {
        invoice.InvoiceItems.Remove(item);
        RecalculateTotals();
    }

    private void RecalculateTotals(ChangeEventArgs? e = null)
    {
        foreach (var item in invoice.InvoiceItems)
        {
            item.TotalPrice = item.UnitPrice * item.Quantity;
        }

        invoice.SubTotal = invoice.InvoiceItems.Sum(i => i.TotalPrice);
        invoice.TaxAmount = invoice.SubTotal * (taxPercent / 100);
        invoice.TotalAmount = invoice.SubTotal + invoice.TaxAmount;
    }

    private async Task HandleCreateInvoice()
    {
        invoice.InvoiceNumber = $"INV-{DateTime.Now.Ticks}";
        invoice.CreatedAt = DateTime.Now;

        // Calculate final totals one last time
        RecalculateTotals();

        var created = await AdminService.CreateInvoiceAsync(invoice);

        if (created != null)
            Navigation.NavigateTo("/invoice");
        else
            Console.WriteLine("Failed to create invoice.");
    }
}
